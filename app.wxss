/**app.wxss**/
page{
  background-color: #e6e6e6;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.title{
  color: red;
  text-align: center;
  font-size: 22px;
  margin-bottom: 15px;
  font-weight: bold;
}
.button-board {
  display: flex;
  flex-direction: column;
  flex: 1;
  padding: 10rpx;
}
.btnRow{
  display: flex;
  flex-direction: column;
}
.button-cell {
  flex: 1;
  margin: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 1rpx 1rpx 1rpx #AAAAAA;
  background-color: #DDDDDD;
}
.help{
  margin-top: 30rpx;
  width: 450rpx;
  background: #14a1fd;
  color: #fff;
  border-radius: 70rpx;
}
.add_help{
  width: 100%;
  position: fixed;
  bottom: 30rpx;
}
.box{
  margin: 10rpx;
  padding: 10rpx;
  border: 1px solid gray;
}